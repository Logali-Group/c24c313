<core:FragmentDefinition
            xmlns="sap.m"
            xmlns:form="sap.ui.layout.form"
            xmlns:core="sap.ui.core">
    
    <Panel
            headerText="{i18n>panelFrTitle}"
            class="sapUiResponsiveMargin"
            width="50%">

            <content>
                <form:SimpleForm
                                        id="SimpleForm"
                                        editable="true">
                        <form:content>
                                <Label text="{i18n>labelName}"/>
                                <Input/> 
                                <Label text="{i18n>lastName}"/>
                                <Input/>  
                        </form:content>
                </form:SimpleForm>
            </content>

    </Panel>

</core:FragmentDefinition>